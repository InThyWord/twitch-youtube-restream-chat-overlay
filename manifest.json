{
  "name": "Youtube & Twitch chat overlay",
  "description": "Add Youtube/Twitch Live Chat to your OBS as a browser overla. Feature requests accepted!",
  "manifest_version": 2,
  "version": "0.2.2",
  "homepage_url": "http://chat.overlay.ninja/",
  "icons": {
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "https://youtube.com/*", "https://www.youtube.com/*", "https://studio.youtube.com/*", "https://www.twitch.tv/*", "storage"
  ],
  "content_scripts": [
	  {
		"css": ["main.css"],
		"js": ["jquery.js", "youtube.js"],
		"matches": ["https://youtube.com/live_chat*", "https://www.youtube.com/live_chat*", "https://studio.youtube.com/live_chat*"]
	  },
	  {
		"css": ["main.css"],
		"js": ["jquery.js", "twitch.js"],
		"matches": ["https://www.twitch.tv/popout/*"]
	  }
  ],
  "options_ui": {
    "page": "settings/options.html"
  }
}
